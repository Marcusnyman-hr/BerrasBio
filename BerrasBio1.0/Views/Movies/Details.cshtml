        }
      </ul>
    </div>*@
  @*<div class="movie-details-inner" id="movie-details-inner-trailer">
      trailer
    </div>*@

</div>


<div class="movie-details-bg-container"><img src="~/assets/img/backdrops/@Model.BackdropUrl" class="movie-details-bg" /></div>
